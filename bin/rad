#!/usr/bin/env ruby
require 'rudo'
require 'trollop'

options = Trollop::options do
  opt :file_path, "Alternate path to list, default ~/rudo.yml", :default => '~/rudo.yml'
  opt :color, "Print with colors", :default => true
end

begin
  position = Integer(ARGV[1]) - 1
rescue
  position = 0
end

r = Rudo.new(options)
r.add(ARGV[0], position)
puts r
