#!/usr/bin/env ruby
require 'rudo'
require 'trollop'

options = Trollop::options do
  opt :file_path, "Alternate path to list, default ~/rudo.yml", :default => '~/rudo.yml'
  opt :color, "Print with colors", :default => true
end

steps = ARGV[0] ? Integer(ARGV[0]) : 1

r = Rudo.new(options)
r.walk(steps)
puts r
